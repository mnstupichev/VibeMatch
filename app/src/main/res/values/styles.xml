<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button_circle</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CircularButton.Profile">
        <item name="android:background">@drawable/bg_avatar_circle</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.TextPrimary">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.TextSecondary">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.Corner.Full" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 